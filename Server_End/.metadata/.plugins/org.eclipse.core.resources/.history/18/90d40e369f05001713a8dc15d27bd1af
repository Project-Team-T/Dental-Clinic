package com.dentalclinic.dentist;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;
import org.springframework.transaction.annotation.Transactional;

import com.dentalclinic.dentist.Dentist;

/**
 * @author Xiangting Fan
 */

public interface DentistRepository extends CrudRepository<Dentist, Integer>{

	
	/**
     * Retrieve an {@link Owner} from the data store by id.
     * @param id the id to search for
     * @return the {@link Owner} if found
     */
    @Query("SELECT dentist FROM Dentist dentist WHERE dentist.id =:id")
    @Transactional(readOnly = true)
    Dentist findById(@Param("id") Integer id);
    
	/**
     * Save an {@link Owner} to the data store, either inserting or updating it.
     * @param owner the {@link Owner} to save
     */
   // void save(Dentist dentist);
}
